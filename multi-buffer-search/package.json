{
  "name": "multi-buffer-search",
  "displayName": "Multi-Buffer Search",
  "description": "Zed-style multi-buffer search and edit for VS Code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:multiBufferSearch.search",
    "onCommand:multiBufferSearch.replace",
    "onCommand:multiBufferSearch.applyChanges",
    "onCommand:multiBufferSearch.openSourceFile"
  ],
  "contributes": {
    "commands": [
      {
        "command": "multiBufferSearch.search",
        "title": "Multi-Buffer Search",
        "category": "Multi-Buffer"
      },
      {
        "command": "multiBufferSearch.replace",
        "title": "Multi-Buffer Search & Replace",
        "category": "Multi-Buffer"
      },
      {
        "command": "multiBufferSearch.applyChanges",
        "title": "Apply Multi-Buffer Changes",
        "category": "Multi-Buffer",
        "when": "resourceExtname == .multibuffer"
      },
      {
        "command": "multiBufferSearch.openSourceFile",
        "title": "Open Source File",
        "category": "Multi-Buffer",
        "when": "resourceExtname == .multibuffer"
      }
    ],
    "keybindings": [
      {
        "command": "multiBufferSearch.applyChanges",
        "key": "ctrl+s",
        "mac": "cmd+s",
        "when": "resourceExtname == .multibuffer"
      },
      {
        "command": "multiBufferSearch.openSourceFile",
        "key": "f12",
        "when": "resourceExtname == .multibuffer"
      }
    ],
    "languages": [
      {
        "id": "multibuffer",
        "aliases": ["Multi-Buffer Results"],
        "extensions": [".multibuffer"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "multibuffer",
        "scopeName": "source.multibuffer",
        "path": "./syntaxes/multibuffer.tmGrammar.json"
      }
    ],
    "configuration": {
      "title": "Multi-Buffer Search",
      "properties": {
        "multiBufferSearch.contextLines": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "maximum": 10,
          "description": "Number of context lines to show above and below search results (deprecated: use contextBefore/contextAfter)"
        },
        "multiBufferSearch.contextBefore": {
          "type": "number",
          "minimum": 0,
          "maximum": 10,
          "description": "Number of context lines to show before search results (overrides contextLines)"
        },
        "multiBufferSearch.contextAfter": {
          "type": "number",
          "minimum": 0,
          "maximum": 10,
          "description": "Number of context lines to show after search results (overrides contextLines)"
        },
        "multiBufferSearch.incrementalUpdates.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable incremental search updates (experimental)"
        },
        "multiBufferSearch.incrementalUpdates.debounceDelay": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 2000,
          "description": "Delay in milliseconds before processing incremental updates"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.3"
  }
}
