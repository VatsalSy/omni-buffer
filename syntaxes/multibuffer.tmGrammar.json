{
  "scopeName": "source.multibuffer",
  "name": "Multi-Buffer",
  "patterns": [
    {
      "name": "meta.header.multibuffer",
      "match": "^Multi-Buffer (Search|Replace):.*$",
      "captures": {
        "0": { "name": "markup.heading.multibuffer" }
      }
    },
    {
      "name": "meta.file-header.multibuffer",
      "match": "^=== (.+)$",
      "captures": {
        "0": { "name": "entity.name.filename.multibuffer" },
        "1": { "name": "string.filename.multibuffer" }
      }
    },
    {
      "name": "meta.line-number.multibuffer",
      "match": "^\\s*(\\d+)\\s+(.*)$",
      "captures": {
        "1": { "name": "constant.numeric.line-number.multibuffer" },
        "2": { "name": "source.embedded" }
      }
    }
  ]
}
